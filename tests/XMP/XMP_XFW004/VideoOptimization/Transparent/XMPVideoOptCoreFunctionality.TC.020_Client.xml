
<!-- For this test case Product View file should contain following mediaStore firstChunkRequestTimeout:-
 <mediaStore reaperSecs="10800" chunkSizeBytes="8192" firstChunkRequestTimeout="5" chunkRequestTimeout="30" maxMemorySizeMBytes="300"/> -->

<test>

	<function name="testName" module="Basic">
		<parameter>XMPVideoOptCoreFunctionality.TC.020_Client</parameter>
	</function>

	<description>HTTP agent requests a video / "status" attribute of Control Item is "done" (FTR_OptimizeVideo context: true, MSR_WaitForOptimizedContent context: true) / Non-Optimized Content should be sent to HTTP Agent after MSR_CFG_ChunkItemTimeoutSecs elapsed without receiving a chunk from VIDEO-STORE</description>

	<!-- Delete Message Store -->
	<subtest>deleteMediaStoreAll.xml</subtest>

	<function name="disableProxy" module="HTTP" />

	<!-- Query the name of the active MEDIA-STORE process -->
	<function name="activeProcessToVar" module="Remote">
		<parameter>MEDIA-STORE</parameter>
		<parameter>Media_Store_Process_Name</parameter>
	</function>

	<!-- Prepare the ContextStatistics File -->
	<function name="writeRemoteFile" module="Remote">
		<parameter>vo_ContextStatistics.xml</parameter>
		<xml>
		<contextStatistics>
			<contextStatistic condition="FTR_OptimizeVideo is true and 
			LSA_LogicalLog matches '^TCP-ROUTER'"
			statisticName="VideoOptimization"
			key="MSR_Name"
			maxCounters="100"
			rateIntervalSeconds="180" />
		</contextStatistics>
		</xml>
	</function>

	<function name="executeRemoteXMSCommand" module="Remote">
		<parameter>
			<parameter>load data </parameter>
			<parameter>vo_ContextStatistics.xml</parameter>
		</parameter>
	</function>

	<function name="queryResponse" module="Remote">
		<parameter>^Loaded contextstatistics.*</parameter>
		<parameter>dev/null</parameter>
	</function>

	<!-- Prepare the Request Modification File -->
	<function name="writeRemoteFile" module="Remote">
		<parameter>vo_reqmod_online_opt.xml</parameter>
		<xml>
		<requestModifications xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="requestmodifications.xsd">
		<table name="DisableThings" phase="httpRequest">
			<selector>
				<modifyContext name="Skip_CACHE" value="'true'"/>
				<modifyContext name="Skip_VIRUSSCANNER" value="'true'"/>
				<modifyContext name="FTR_HtmlTidyDisable" value="'true'"/>
				<modifyContext name="Skip_COOKIE" value="'true'"/>
				<modifyContext name="Skip_ICC" value="'true'"/>
				<modifyContext name="FTR_MultipartCompose_Disable" value="'true'"/>
				<modifyContext name="FTR_Prefetch_Disable" value="'true'"/>
				<modifyContext name="FTR_Deflate_Disable" value="'true'"/>
				<modifyContext name="FTR_Gzip_Disable" value="'true'"/>
			</selector>
		</table>
		<table name="blip_videoOptimization" phase="httpRequest">
			<selector urlPattern="http://*/videos/{.*\.flv}">
				<modifyContext name="FTR_OptimizeVideo" value="'true'"/>
				<modifyContext name="FTR_WaitForOptimizedContent" value="'true'"/>
			</selector>
		</table>
		</requestModifications>
		</xml>
	</function>

	<function name="executeRemoteXMSCommand" module="Remote">
		<parameter>
			<parameter>load data </parameter>
			<parameter>vo_reqmod_online_opt.xml</parameter>
		</parameter>
	</function>

	<function name="queryResponse" module="Remote">
		<parameter>^Loaded requestmodifications.*</parameter>
		<parameter>dev/null</parameter>
	</function>

	<!-- Radius Login -->
	<function name="radiusLogon" module="Radius">
		<parameter>xttuser</parameter>
		<parameter>12346</parameter>
	</function>

	<!-- Send the 1st video retrieval request to create items in Media Store-->
	<function name="sendGetRequest" module="HTTP">
		<parameter>
			<parameter>http://</parameter>
			<configuration>webserver/ip</configuration>
			<parameter>/videos/Tarabonner-FlightControl637.flv</parameter>
		</parameter>
	</function>

	<!-- Validate Response Code Send by XMP -->
	<function name="checkResponseCode" module="HTTP">
		<parameter>200</parameter>
	</function>

	<!-- Sleep for completion of video optimization process -->
	<function name="sleep" module="Basic">
		<parameter>15000</parameter>
	</function>

	<!-- amocli search for Optimized Video stored in Media Store -->
	<function name="executeRemoteXMSCommand" module="Remote">
		<parameter>
			<parameter>run command amocli -e (MS_Status=='done') -m0 search TI:F.CEE.</parameter>
			<variable>Media_Store_Process_Name</variable>
			<parameter>:AMO</parameter>
		</parameter>
	</function>

	<!-- Check for final status of chunks stored in the Media Store, it should be in "Done" status-->
	<function name="queryResponse" module="Remote">
		<parameter>MS_Status=done</parameter>
		<parameter>dev/null</parameter>
	</function>

	<!--Check for High priority item associated with the real-time use case-->
	<function name="queryResponse" module="Remote">
		<parameter>MS_Priority=99</parameter>
		<parameter>dev/null</parameter>
	</function>
	
	<!-- Check for MS_Url & MS_Name -->
	<function name="queryResponse" module="Remote">
		<parameter>
			<parameter>MS_Url=http://</parameter>
			<configuration>webserver/ip</configuration>
			<parameter>/videos/Tarabonner-FlightControl637.flv</parameter>
		</parameter>
		<parameter>dev/null</parameter>
	</function>
	
	<function name="queryResponse" module="Remote">
		<parameter>
			<parameter>MS_Name=http://</parameter>
			<configuration>webserver/ip</configuration>
			<parameter>/videos/Tarabonner-FlightControl637.flv</parameter>
		</parameter>
		<parameter>dev/null</parameter>
	</function>

	<!-- Check for total number of Optimized Chunks stored in Media Store-->
	<function name="executeRemoteXMSCommand" module="Remote">
		<parameter>
			<parameter>run command amocli -k count TI:F.CEE.</parameter>
			<variable>Media_Store_Process_Name</variable>
			<parameter>:AMO</parameter>
		</parameter>
	</function>

	<function name="queryResponse" module="Remote">
		<parameter>amocli: 73 items counted</parameter>
		<parameter>response1</parameter>
	</function>

	<!-- Stopping all Video Optimizer processes -->
	<function name="stopProcesses" module="Remote">
		<parameter>VIDEO-OPTIMIZER</parameter>
	</function>

	<function name="checkProcessStatus" module="Remote">
		<parameter>VIDEO-OPTIMIZER</parameter>
		<parameter>Stopped</parameter>
	</function>

	<!-- Sending 2nd video retrieval request for Optimized Contents-->
	<function name="sendGetRequest" module="HTTP">
		<parameter>
			<parameter>http://</parameter>
			<configuration>webserver/ip</configuration>
			<parameter>/videos/Tarabonner-FlightControl637.flv</parameter>
		</parameter>
	</function>

	<!-- Validate Response Code Send by XMP -->
	<function name="checkResponseCode" module="HTTP">
		<parameter>200</parameter>
	</function>

	<!-- Sleep a while until video optimization will start -->
	<function name="sleep" module="Basic">
		<parameter>6000</parameter>
	</function>

	<!-- Starting all Video Optimizer processes -->
	<function name="startProcesses" module="Remote">
		<parameter>VIDEO-OPTIMIZER</parameter>
	</function>

	<function name="checkProcessStatus" module="Remote">
		<parameter>VIDEO-OPTIMIZER</parameter>
		<parameter>Running</parameter>
		<parameter>*Running</parameter>
	</function>

	<!-- amocli search for Optimized Video in Media Store -->
	<function name="executeRemoteXMSCommand" module="Remote">
		<parameter>
			<parameter>run command amocli -e (MS_Status=='done') -m0 search TI:F.CEE.</parameter>
			<variable>Media_Store_Process_Name</variable>
			<parameter>:AMO</parameter>
		</parameter>
	</function>

	<!-- Check for final status of chunks stored in the Media Store, it should be in "Done" status-->
	<function name="queryResponse" module="Remote">
		<parameter>MS_Status=done</parameter>
		<parameter>dev/null</parameter>
	</function>

	<!--Check for High priority item associated with the real-time use case-->
	<function name="queryResponse" module="Remote">
		<parameter>MS_Priority=99</parameter>
		<parameter>dev/null</parameter>
	</function>
	
	<!-- Check for MS_Url & MS_Name -->
	<function name="queryResponse" module="Remote">
		<parameter>
			<parameter>MS_Url=http://</parameter>
			<configuration>webserver/ip</configuration>
			<parameter>/videos/Tarabonner-FlightControl637.flv</parameter>
		</parameter>
		<parameter>dev/null</parameter>
	</function>
	
	<function name="queryResponse" module="Remote">
		<parameter>
			<parameter>MS_Name=http://</parameter>
			<configuration>webserver/ip</configuration>
			<parameter>/videos/Tarabonner-FlightControl637.flv</parameter>
		</parameter>
		<parameter>dev/null</parameter>
	</function>

	<!-- Check for total number of Optimized Chunks stored in Media Store-->
	<function name="executeRemoteXMSCommand" module="Remote">
		<parameter>
			<parameter>run command amocli -k count TI:F.CEE.</parameter>
			<variable>Media_Store_Process_Name</variable>
			<parameter>:AMO</parameter>
		</parameter>
	</function>

	<function name="queryResponse" module="Remote">
		<parameter>amocli: 73 items counted</parameter>
		<parameter>response2</parameter>
	</function>

	<!-- Check for Number of Message chunks -->
	<function name="compareString" module="basic">
		<variable>response1</variable>
		<variable>response2</variable>
	</function>

	<!-- Radius Logoff -->
	<function name="radiusLogoff" module="Radius">
		<parameter>xttuser</parameter>
		<parameter>12346</parameter>
	</function>

	<!-- Purge the Request Modification File -->
	<function name="writeRemoteFile" module="Remote">
		<parameter>REQMOD_EmptyRules.xml</parameter>
		<parameter>&lt;?xml version="1.0" encoding="UTF-8"?&gt;&lt;requestModifications&gt;&lt;/requestModifications&gt;</parameter>
	</function>

	<function name="executeRemoteXMSCommand" module="Remote">
		<parameter>
			<parameter>load data </parameter>
			<parameter>REQMOD_EmptyRules.xml</parameter>
		</parameter>
	</function>

	<function name="queryResponse" module="Remote">
		<parameter>^Loaded requestmodifications.*</parameter>
		<parameter>dev/null</parameter>
	</function>

	<!-- Purge the ContextStatistics File -->
	<function name="writeRemoteFile" module="Remote">
		<parameter>vo_EmptyContextStatistics.xml</parameter>
		<parameter>&lt;?xml version="1.0" encoding="UTF-8"?&gt;&lt;contextStatistics&gt;&lt;/contextStatistics&gt;</parameter>
	</function>

	<function name="executeRemoteXMSCommand" module="Remote">
		<parameter>
			<parameter>load data </parameter>
			<parameter>vo_EmptyContextStatistics.xml</parameter>
		</parameter>
	</function>

	<function name="queryResponse" module="Remote">
		<parameter>^Loaded contextstatistics.*</parameter>
		<parameter>dev/null</parameter>
	</function>

</test>
