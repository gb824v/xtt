	</function>

	<function name="queryVariableNegative" module="Basic">
		<variable>4</variable>
		<variable>5</variable>
	</function>

	<function name="stopWebServer" module="HTTP"/>

	<function name="radiusLogoff" module="Radius">
		<parameter>xttuser</parameter>
		<parameter>12345</parameter>
		</function>

