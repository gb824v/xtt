<test>
	<function name="testName" module="Basic">
		<parameter>Bugzilla24113.TC.007</parameter>
	</function>

	<description>Validate XMP scans the request which fits to the default value of RequestCondition ("") / XMP blocks [KSPRSKY_Operation needs to be set to REQUEST] / Virus infected content is in HTTP Headers</description>

	<!-- Start Web Server -->
	<function name="startWebServer" module="HTTP" />

	<!-- Radius Login -->
	<function name="radiusLogon" module="Radius">
		<parameter>xttuser</parameter>
		<parameter>12346</parameter>
	</function>

	<!-- Get the name of TCP-ROUTER process -->
	<function name="activeProcessToVar" module="Remote">
		<parameter><configuration>HttpProxy/ProcessName</configuration><parameter>.*1</parameter></parameter>
		<parameter>Name_Of_TCP-ROUTER_Process</parameter>
	</function>

	<!-- updated value of RequestCondition -->
	<function name="executeRemoteXMSCommand" module="Remote">
		<parameter>
			<parameter>run command cmu -C KSPRSKY_CFG_RequestCondition </parameter>
			<variable>Name_Of_TCP-ROUTER_Process</variable>
			<parameter> [Internal_NAI] matches '.*'</parameter>
		</parameter>
	</function>
	
	<function name="queryResponse" module="Remote">
		<parameter>KSPRSKY_CFG_RequestCondition[\s]++:[\s]++\[Internal_NAI\][\s]++matches[\s]++'.*'</parameter>
		<parameter>dev/null</parameter>
	</function>

	<!-- Prepare the Request Modification File -->
	<function name="writeRemoteFile" module="Remote">
		<parameter>REQMOD_Bugzilla24113.TC.007.xml</parameter>
		<xml>
			<requestModifications xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="requestmodifications.xsd">
				<table name="Set_KSPRSKY_Operation" phase="httpRequest" >
					 <selector>
						 <modifyContext name="KSPRSKY_Operation" value="'REQUEST'"  />

					</selector>
				</table>
			</requestModifications>
		</xml>
    </function>

	<function name="executeRemoteXMSCommand" module="Remote">
		<parameter>
			<parameter>load data </parameter>
			<parameter>REQMOD_Bugzilla24113.TC.007.xml</parameter>
		</parameter>
	</function>

	<function name="queryResponse" module="Remote">
		<parameter>^Loaded requestmodifications.*</parameter>
		<parameter>dev/null</parameter>
	</function>
   
	<!-- Accept virus filetypes -->
    <function name="setHeader" module="HTTP">
        <parameter>mytest</parameter>
        <base64decode><base64decode><file>base64virus.bin</file></base64decode></base64decode>
    </function>

	<!-- Send virus Infected data in HTTP Get Proxy Request -->
	<function name="sendGetRequest" module="HTTP">
		<parameter>
			<parameter>http://</parameter>
			<configuration>SYSTEM/IP</configuration>
			<parameter>:</parameter>
			<configuration>WEBSERVER/PORT</configuration>
			<parameter>/PF.pdf</parameter>
		</parameter>
	</function>

	<!-- Validate Response Code Send by XMP -->
	<function name="checkResponseCode" module="HTTP">
		<parameter>302</parameter>
	</function>

	<!-- updated default RequestCondition -->
	<function name="executeRemoteXMSCommand" module="Remote">
		<parameter>
			<parameter>run command cmu -C KSPRSKY_CFG_RequestCondition </parameter>
			<variable>Name_Of_TCP-ROUTER_Process</variable>
			<parameter>  </parameter>
		</parameter>
	</function>
	
	<function name="queryResponse" module="Remote">
		<parameter>KSPRSKY_CFG_RequestCondition[\s]++:[\s]++</parameter>
		<parameter>dev/null</parameter>
	</function>

	<!-- Purge the Request Modification File -->
	<function name="writeRemoteFile" module="Remote">
		<parameter>REQMOD_EmptyRules.xml</parameter>
		<parameter>&lt;?xml version="1.0" encoding="UTF-8"?&gt;&lt;requestModifications&gt;&lt;/requestModifications&gt;</parameter>
    </function>

	<function name="executeRemoteXMSCommand" module="Remote">
		<parameter>
			<parameter>load data </parameter>
			<parameter>REQMOD_EmptyRules.xml</parameter>
		</parameter>
	</function>

	<function name="queryResponse" module="Remote">
		<parameter>^Loaded requestmodifications.*</parameter>
		<parameter>dev/null</parameter>
	</function>

	<!-- Radius Logoff -->
	<function name="radiusLogoff" module="Radius">
		<parameter>xttuser</parameter>
		<parameter>12346</parameter>
	</function>

	<!-- Stop Web Server -->
	<function name="stopWebServer" module="HTTP"/>

</test>
