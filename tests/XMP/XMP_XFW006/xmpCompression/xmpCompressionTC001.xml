		<parameter>Hello World</parameter>
	</function>	
	<!-- check that client side gzip decompression happened -->
	<function name="compareString" module="Basic">
		<variable>HTTP/BODY/ENCODING</variable>
		<parameter>gzip</parameter>
	</function>	

