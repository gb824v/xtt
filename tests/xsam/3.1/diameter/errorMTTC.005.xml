    </function>

    <function name="startProcess" module="Remote">
        <configuration>XSAM/BILLINGPROCESS/FIRST</configuration>
    </function>
    <function name="stopProcess" module="Remote">
        <configuration>XSAM/BILLINGPROCESS/SECOND</configuration>
    </function>
