<test>
    <configuration>xsn_config.xml</configuration>
    <function name="testName" module="Basic">
        <parameter>SMS-Router.UCP.003.1.4</parameter>
    </function>

	<description>This is an example test for MT message of type 51a_MT(2) submit short message operation(Numeric)</description>

    <function name="startSMSCServer" module="SMS"/>

    <!--<function name="setVariable" module="BASIC">
        <parameter>SMSCAddress</parameter>
